<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/img_tictactoe"
            android:id="@+id/img_tictactoe"
            android:contentDescription="@string/img_tictactoe"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/horizontal_guideline"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/horizontal_guideline"
            app:layout_constraintGuide_percent="0.5"/>
    <TextView
            android:text="@string/text_title_tictactoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_title_tictactoe"
            app:layout_constraintTop_toBottomOf="@id/horizontal_guideline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:typeface="serif" android:textSize="30sp" android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold|italic" android:fontFamily="sans-serif"/>
    <TextView
            android:text="@string/text_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_description"
            app:layout_constraintTop_toBottomOf="@id/text_title_tictactoe"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    <TextView
            android:text="@string/text_enter_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_enter_name"
            app:layout_constraintTop_toBottomOf="@id/text_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/plain_text_name"
            android:ems="10"
            android:id="@+id/plain_text_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_enter_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
    <Button
            android:text="@string/button_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_start"
            app:layout_constraintTop_toBottomOf="@id/plain_text_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:srcCompat="@drawable/img_epita"
            android:id="@+id/img_epita"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/img_epita"/>
    <TextView
            android:text="@string/text_made_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_made_at"
            app:layout_constraintRight_toLeftOf="@id/img_epita"
            app:layout_constraintTop_toTopOf="@id/img_epita"
            app:layout_constraintBottom_toBottomOf="@id/img_epita"
            android:layout_marginRight="5dp"/>
</android.support.constraint.ConstraintLayout>